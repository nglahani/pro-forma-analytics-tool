# Backend Development Container
# Based on existing Dockerfile.test but optimized for development

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (from existing Dockerfile.test)
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Source code will be mounted via volume in docker-compose
# Database files will be mounted via volume for persistence

# Set Python path
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Expose development port
EXPOSE 8000

# Health check for container monitoring
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD curl -f http://localhost:8000/api/v1/health || exit 1

# Development command with auto-reload
CMD ["python", "-m", "uvicorn", "src.presentation.api.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]