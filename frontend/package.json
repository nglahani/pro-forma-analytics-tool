{
  "name": "pro-forma-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --config=jest.performance.config.js",
    "test:performance:verbose": "PERFORMANCE_VERBOSE=true jest --config=jest.performance.config.js",
    "test:load": "LOAD_TEST_DURATION=60000 CONCURRENT_USERS=10 jest --config=jest.performance.config.js",
    "test:benchmark": "jest --config=jest.performance.config.js --testNamePattern=\"Performance Regression\"",
    "performance:report": "node src/tests/performance/generate-report.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:safari": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\"",
    "test:e2e:report": "playwright show-report",
    "test:visual": "playwright test --config=playwright-visual.config.ts",
    "test:visual:update": "playwright test --config=playwright-visual.config.ts --update-snapshots",
    "test:visual:ui": "playwright test --config=playwright-visual.config.ts --ui",
    "test:visual:debug": "playwright test --config=playwright-visual.config.ts --debug",
    "test:visual:chrome": "playwright test --config=playwright-visual.config.ts --project=visual-chrome-desktop",
    "test:visual:mobile": "playwright test --config=playwright-visual.config.ts --project=visual-mobile",
    "test:visual:dark": "playwright test --config=playwright-visual.config.ts --project=visual-chrome-dark",
    "test:visual:report": "playwright show-report visual-test-results",
    "test:load": "playwright test --config=playwright-load.config.ts",
    "test:load:light": "MAX_CONCURRENT_USERS=5 playwright test --config=playwright-load.config.ts --project=load-light",
    "test:load:medium": "MAX_CONCURRENT_USERS=10 playwright test --config=playwright-load.config.ts --project=load-medium", 
    "test:load:heavy": "MAX_CONCURRENT_USERS=20 playwright test --config=playwright-load.config.ts --project=load-heavy",
    "test:load:memory": "playwright test --config=playwright-load.config.ts --project=memory-test",
    "test:load:stress": "LOAD_TEST_DURATION=300000 playwright test --config=playwright-load.config.ts --project=stress-test",
    "test:load:report": "playwright show-report load-test-results"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@tanstack/react-query": "^5.28.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "lucide-react": "^0.363.0",
    "next": "15.4.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.2.2",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^5.14.9",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
